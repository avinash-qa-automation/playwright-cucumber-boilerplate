{
  "name": "@yourorg/playwright-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright testing framework with web, API, BDD, and Mocha support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test:bdd:ui": "cross-env node tests/run-cucumber.js",
    "test:ui:parallel": "cross-env node tests/run-cucumber.parallel.js",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "init": "playwright install && npm install"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "bdd",
    "cucumber",
    "mocha",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@axe-core/playwright": "^4.7.0",
    "@playwright/test": "^1.39.0",
    "dotenv": "^16.0.3",
    "winston": "^3.10.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "allure-cucumberjs": "^3.4.1",
    "allure-js-commons": "^3.4.1",
    "chai": "^4.3.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
